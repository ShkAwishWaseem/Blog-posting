<!DOCTYPE html>
<html lang="en">
<head>
  <%-  include("./partials/head.ejs") %>
  <title>Blogs</title>
</head>
<body>
     <%-  include("./partials/nav.ejs") %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageUrl %>" alt="coverImageUrl" width="600px">
      <p class="mt-3"><%= blog.body %></p>
      

      <div  class="container mt-4">
         <img src="<%= blog.createdBy.profileImageUrl %>" alt="profile" width="100px"> <%= blog.createdBy.fullName %>
      </div>

      <div class="container mt-3">
        <h2>Comments (<%= comments.length %>)</h2>
        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="content"
                placeholder="Enter your Comment"
              />
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        <% } %>
      </div>
  </form>

  <div class="mt-3">
    <% comments.forEach(comment => { %>
      <div >
        <b><%= comment.createdBy.fullName %> : </b> <p style="display: inline;"><%= comment.content %></p>
      </div>
    <% }) %>
  </div>
      </div>


     <%- include("./partials/scripts.ejs") %>
</body>
</html>